div(id='navigation', class='container')
  if(loggedIn)
    a(href='/#bookmarks', class='pull-left brand') 
      img(src='/images/logo.png', alt='Bookmark Manager', title='Bookmark Manager')
      
  if(!loggedIn)
    a(href='/#home', class='pull-left brand') 
      img(src='/images/logo.png', alt='Bookmark Manager', title='Bookmark Manager')
      
  nav
    ul(class='nav nav-pills pull-right')
      if(loggedIn)
        li: a(href='/#user/account') Account
        li: a(href='/user/logout') Logout
      if(!loggedIn)
        li: a(href='/#home') Home
        li: a(href='/demo', title='Tour') Demo
        li: a(href='/#user/login', title='Login') Login 
